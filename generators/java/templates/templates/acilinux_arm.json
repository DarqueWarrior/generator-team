{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerName": {
      "type": "string"
    },
    "containerURI": {
      "type": "string"
    },
    "imageRegistryLoginServer": {
      "type": "string",
      "defaultValue": ""
    },
    "imageUsername": {
      "type": "string",
      "defaultValue": ""
    },
    "imagePassword": {
      "type": "string",
      "defaultValue": ""
    },
    "osType": {
      "allowedValues": [
        "Linux",
        "Windows"
      ],
      "type": "string",
      "defaultValue": "Linux"
    },
    "numberCores": {
      "type": "string",
      "defaultValue": "1"
    },
    "memory": {
      "type": "string",
      "defaultValue": "1.5"
    },
    "ports": {
      "defaultValue": "80",
      "type": "string"
    },
    "containerType": {
      "type": "string",
      "defaultValue": "privateImage-publicIP",
      "allowedValues": [
        "publicImage-publicIP",
        "publicImage-privateIP",
        "privateImage-publicIP",
        "privateImage-privateIP"
      ]
    },
    "locationCheck": {
      "type": "string",
      "defaultValue": "eastus",
      "AllowedValues": [
        "westus",
        "eastus",
        "westeurope"
      ]
    }
  },
  "variables": {
    "containerName": "[concat(parameters('containerName'),'-',uniquestring(parameters('containerName')))]",
    "_bothPublic": "[equals(parameters('containerType'),'publicImage-publicIP')]",
    "_publicImageOnly": "[equals(parameters('containerType'),'publicImage-privateIP')]",
    "_publicIPOnly": "[equals(parameters('containerType'),'privateImage-publicIP')]",
    "_bothPrivate": "[equals(parameters('containerType'),'privateImage-privateIP')]",
    "containerURI": "[parameters('containerURI')]",
    "imageRegistryLoginServer": "[parameters('imageRegistryLoginServer')]",
    "imageUsername": "[parameters('imageUsername')]",
    "imagePassword": "[parameters('imagePassword')]",
    "osType": "[parameters('osType')]",
    "numberCores": "[int(parameters('numberCores'))]",
    "memory": "[float(parameters('memory'))]",
    "port": "[parameters('ports')]"
  },
  "resources": [
    {
      "condition": "[variables('_bothPublic')]",
      "name": "[concat(variables('containerName'),'1')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('containerName')]",
            "properties": {
              "image": "[variables('containerURI')]",
              "ports": [
                {
                  "port": "[variables('port')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[variables('numberCores')]",
                  "memoryInGb": "[variables('memory')]"
                }
              }
            }
          }
        ],
        "osType": "[variables('osType')]",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "[variables('port')]"
            }
          ]
        }
      }
    },
    {
      "condition": "[variables('_publicImageOnly')]",
      "name": "[concat(variables('containerName'),'3')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('containerName')]",
            "properties": {
              "image": "[variables('containerURI')]",
              "resources": {
                "requests": {
                  "cpu": "[variables('numberCores')]",
                  "memoryInGb": "[variables('memory')]"
                }
              }
            }
          }
        ],
        "osType": "[variables('osType')]"
      }
    },
    {
      "condition": "[variables('_publicIPOnly')]",
      "name": "[concat(variables('containerName'),'4')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('containerName')]",
            "properties": {
              "image": "[variables('containerURI')]",
              "ports": [
                {
                  "port": "[variables('port')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[variables('numberCores')]",
                  "memoryInGb": "[variables('memory')]"
                }
              }
            }
          }
        ],
        "osType": "[variables('osType')]",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "[variables('port')]"
            }
          ]
        },
        "imageRegistryCredentials": [
          {
            "server": "[parameters('imageRegistryLoginServer')]",
            "username": "[parameters('imageUsername')]",
            "password": "[parameters('imagePassword')]"
          }
        ]
      }
    },
    {
      "condition": "[variables('_bothPrivate')]",
      "name": "[concat(variables('containerName'),'2')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('containerName')]",
            "properties": {
              "image": "[variables('containerURI')]",
              "resources": {
                "requests": {
                  "cpu": "[variables('numberCores')]",
                  "memoryInGb": "[variables('memory')]"
                }
              }
            }
          }
        ],
        "osType": "[variables('osType')]",
        "imageRegistryCredentials": [
          {
            "server": "[parameters('imageRegistryLoginServer')]",
            "username": "[parameters('imageUsername')]",
            "password": "[parameters('imagePassword')]"
          }
        ]
      }
    }
  ],
  "outputs": {}
}